<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcae51"
    android:id="@+id/one">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/currentImage"
        android:layout_marginTop="35dp"
        android:longClickable="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:elevation="40dp"/>

    <Button
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:text="New Button"
        android:id="@+id/first"
        android:background="#fcae51"
        android:layout_below="@+id/currentImage"
        android:layout_alignRight="@+id/fourth"
        android:layout_alignEnd="@+id/fourth"
        android:layout_marginTop="51dp"
        android:layout_alignLeft="@+id/currentImage"
        android:layout_alignStart="@+id/currentImage" />

    <Button
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:text="New Button"
        android:id="@+id/second"
        android:background="#fcae51"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/first"
        android:layout_alignLeft="@+id/first"
        android:layout_alignStart="@+id/first"
        android:layout_alignRight="@+id/first"
        android:layout_alignEnd="@+id/first" />

    <Button
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:text="New Button"
        android:id="@+id/third"
        android:background="#fcae51"
        android:layout_below="@+id/second"
        android:layout_marginTop="16dp"
        android:layout_alignLeft="@+id/second"
        android:layout_alignStart="@+id/second"
        android:layout_alignRight="@+id/fourth"
        android:layout_alignEnd="@+id/fourth" />

    <Button
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:text="New Button"
        android:id="@+id/fourth"
        android:background="#fcae51"
        android:layout_below="@+id/third"
        android:layout_marginTop="14dp"
        android:layout_alignLeft="@+id/currentImage"
        android:layout_alignStart="@+id/currentImage"
        android:layout_alignRight="@+id/currentImage"
        android:layout_alignEnd="@+id/currentImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="What is the name of this spot?"
        android:id="@+id/question"
        android:layout_below="@+id/currentImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Easy"
        android:id="@+id/easy"
        android:background="#fcae51"
        android:layout_alignBottom="@+id/currentImage"
        android:layout_alignLeft="@+id/currentImage"
        android:layout_alignStart="@+id/currentImage"
        android:layout_marginBottom="79dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Hard"
        android:id="@+id/hard"
        android:background="#fcae51"
        android:layout_alignTop="@+id/easy"
        android:layout_alignRight="@+id/currentImage"
        android:layout_alignEnd="@+id/currentImage" />

</RelativeLayout>
